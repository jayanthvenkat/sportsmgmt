<h1>Listing players</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Imageurl</th>
    <th>Battingorientation</th>
    <th>Bowlingorientation</th>
    <th>Iswicketkeeper</th>
    <th>Username</th>
    <th>Password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.imageUrl %></td>
    <td><%= player.battingOrientation %></td>
    <td><%= player.bowlingOrientation %></td>
    <td><%= player.isWicketkeeper %></td>
    <td><%= player.username %></td>
    <td><%= player.password %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

