<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Ownername</th>
    <th>Managername</th>
    <th>Captainname</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.ownerName %></td>
    <td><%= team.managerName %></td>
    <td><%= team.captainName %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Add a new player to team', new_player_path(:teamid => team.id) %></td>

  </tr>
<% end %>
</table>

